+#ifdef UART_BAUDRATE_COMP_MEGA32U4
+	/* Fix timing issues on Atmega32U4 w/16Mhz oscillator */
+	if (clk == 25000000) {
+		if (baud == 115200) {
+			*scale = 0x000C;
+			*step  = 0x2000;
