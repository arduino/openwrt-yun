+			*scale = 0x000B;
+			*step  = 0x7AE0;
+			return;
+		}
+	}
+	else if (clk == 40000000) {
+		if (baud == 250000 || baud == 230400) {
+			*scale = 0x0004;
+			*step  = 0x1000;
+			return;
+		}
+	}
+#endif
